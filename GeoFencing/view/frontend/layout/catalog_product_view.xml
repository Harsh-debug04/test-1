<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <!-- Use a standard template block and inject the ViewModel -->
            <block class="Magento\Framework\View\Element\Template" name="product.view.map" template="AgriCart_GeoFencing::product/view/map.phtml" after="product.info.price">
                <arguments>
                    <argument name="view_model" xsi:type="object">AgriCart\GeoFencing\ViewModel\Map</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
